<Page x:Class="UserPaymentsDesktopApp.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UserPaymentsDesktopApp.Views.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Страница авторизации">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Label Content="Пользователь" />
            <ComboBox Name="ComboUsers"
                      SelectedIndex="0">
                <ComboBox.Items>
                    <ComboBoxItem>Тестовый пользователь 1</ComboBoxItem>
                    <ComboBoxItem>Тестовый пользователь 2</ComboBoxItem>
                    <ComboBoxItem>Тестовый пользователь 3</ComboBoxItem>
                </ComboBox.Items>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Пароль" />
            <PasswordBox x:Name="Password" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Авторизоваться" />
            <Button Content="Выйти" />
        </StackPanel>
    </StackPanel>
</Page>
